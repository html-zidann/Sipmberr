<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Koneksi Database -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/sipmber?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Dialect MySQL -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- Menampilkan Query di console -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Auto Update Struktur Tabel -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Daftarkan Semua Model -->
        <mapping class="Model.staff"/>
        <mapping class="Model.admin"/>
        <mapping class="Model.staffPelatihan"/>
        <mapping class="Model..pendaftar"/>
        <mapping class="Model.pelatihan"/>
        <mapping class="Model.peserta"/>
        <mapping class="Model.sertifikat"/>

    </session-factory>
</hibernate-configuration>
